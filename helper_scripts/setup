#!/bin/bash

# This script is for developer workstations
#
# The intention is to have a script that can run with 
#    curl -s "https://raw.githubusercontent.com/openlibraryenvironment/platform-rs/master/helper_scripts/setup" | bash
# Which will configure a ux env
# 

# Make a directory for us to work inside - this is our workspace
mkdir rs_ui
cd rs_ui

# Copy the workspace package.json
wget https://raw.githubusercontent.com/openlibraryenvironment/platform-rs/master/helper_scripts/package.json


# git clone --branch <tag_name> 
git clone https://github.com/openlibraryenvironment/platform-rs.git

git clone --branch "v1.2.0" https://github.com/openlibraryenvironment/address-utils.git
git clone --branch "v1.3.1" https://github.com/openlibraryenvironment/address-plugin-british-isles.git
git clone --branch "v1.3.1" https://github.com/openlibraryenvironment/address-plugin-north-america.git
git clone --branch "v1.4.1" https://github.com/openlibraryenvironment/address-plugin-generic.git
git clone --branch "v1.4.0" https://github.com/openlibraryenvironment/stripes-reshare.git
git clone --branch "v1.4.0" https://github.com/openlibraryenvironment/ui-directory.git
git clone --branch "v1.1.0" https://github.com/openlibraryenvironment/ui-plugin-rs-siquery-folio.git
git clone --branch "v1.1.2" https://github.com/openlibraryenvironment/ui-request.git
git clone --branch "v1.4.0" https://github.com/openlibraryenvironment/ui-rs.git
git clone --branch "v1.1.1" https://github.com/openlibraryenvironment/ui-supply.git
git clone --branch "v1.4.0" https://github.com/openlibraryenvironment/ui-update.git



echo Completed clone and setup
echo cd rs_ui/platform-rs and run "yarn install" to download deps, then "stripes serve ./stripes.config.js --hasAllPerms" to start the UI
