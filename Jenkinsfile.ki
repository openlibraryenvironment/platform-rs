@Library ('kifolio') _

parameters {
  text(name: 'YARN_WORKSPACES', defaultValue: '', description: 'JSON String of workspaces in the format {"workspace-name":"https://git.url"}.')
}

final Map args=[:]

// Add workspaces via build params
final String ws_str = params.YARN_WORKSPACES?.trim()
if (ws_str) args['workspaces'] = readJSON(text: ws_str) as Map

buildStripesPlatform(args)